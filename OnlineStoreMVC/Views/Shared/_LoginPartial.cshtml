@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ms-auto" }))
    {
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity.GetUserName()
                </a>
                <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                    @Html.AntiForgeryToken()
                    <li>@Html.ActionLink("Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Manage Products", "Index", "Products", null, new { @class = "dropdown-item" })</li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">Log off</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>@Html.ActionLink("Cart", "Index", "Cart", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ms-auto mb-lg-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Account
            </a>
            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "dropdown-item" })</li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })</li>
                <li><hr class="dropdown-divider" /></li>
                <li>@Html.ActionLink("Cart", "Index", "Cart", null, new { @class = "dropdown-item" })</li>
            </ul>
        </li>

    </ul>
}
